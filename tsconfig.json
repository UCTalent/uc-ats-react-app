{
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": ".",
    "esModuleInterop": true,
    "module": "es2022",
    "moduleResolution": "Bundler",
    "paths": {
      "components/*": ["src/components/*"],
      "pages/*": ["src/pages/*"],
      "assets/*": ["src/assets/*"],
      "forms/*": ["src/forms/*"],
      "providers/*": ["src/providers/*"],
      "utils/*": ["src/utils/*"],
      "libs/*": ["src/libs/*"],
      "store/*": ["src/store/*"],
      "constants/*": ["src/constants/*"],
      "hooks/*": ["src/hooks/*"],
      "types/*": ["src/types/*"],
      "services/*": ["src/services/*"],
      "routes/*": ["src/routes/*"],
      "data/*": ["src/data/*"],
      "layouts/*": ["src/layouts/*"],
      "theme/*": ["src/theme/*"]
    }
  },
  "include": ["src"]
}
